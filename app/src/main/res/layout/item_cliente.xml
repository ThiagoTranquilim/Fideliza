<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <!-- Imagem do cliente -->
    <ImageView
        android:id="@+id/ivCliente"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Detalhes do cliente -->
    <TextView
        android:id="@+id/tvClienteNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome do Cliente"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivCliente"
        app:layout_constraintEnd_toStartOf="@id/btnSelecionar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- BotÃ£o Selecionar -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSelecionar"
        style="@style/containedButtonPurple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
