<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.common.VerificationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#E0E0E0">

        <!-- Título principal -->
        <TextView
            android:id="@+id/tvSecurityMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escolha a melhor forma de Verificação de Segurança da sua Conta"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="45dp"/>

        <!-- CheckBox para E-mail -->
        <CheckBox
            android:id="@+id/checkBoxEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail"
            app:layout_constraintTop_toBottomOf="@id/tvSecurityMessage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp"
            android:layout_marginStart="45dp"/>

        <!-- CheckBox para SMS -->
        <CheckBox
            android:id="@+id/checkBoxSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS"
            app:layout_constraintTop_toBottomOf="@id/checkBoxEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="45dp"
            android:layout_marginTop="16dp"/>

        <!-- Botão Verificar -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerificar"
            style="@style/containedButtonPurple"
            android:layout_marginTop="8dp"
            android:text="Verificar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/checkBoxSMS" />

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Voltar"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/btnVerificar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>